                            <ul id="TabStripEvents" class="tabs-header-list" style="width: 261px;" role="tablist">
                                <li class="active">
                                    <a class="js-live-events-toggle" href="#liveevents" role="tab" data-toggle="tab">Live <em>2</em></a>
                                </li>
                                <li class="">
