                                                        <a href="/Event/EventDetails?id=@item.Id" style="text-decoration: none;" class="hide-small">  teachnical soup</a>
                                                        <span class="show-small">  @item.Title</span>
                                                    </h3>
                                                    <div>

                                                        <span class="text-body--faint text--truncated">
                                                            @item.StartDate
                                                        </span>

                                                    </div>
                                                    <ul class="l-mar-top-2 show-large action-menu grouped-ico">
                                                        <li>
                                                            <a href="/Event/EventManagement?id=@item.Id">
                                                                <i class="ico-settings ico--small ico--color-understated"></i>
                                                            </a>
                                                        </li>
                                                        <li class="item-text">
                                                            <a href="/Event/EventManagement?id=@item.Id" class="text-body-medium text-body--faint">
